<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ma_background"
    tools:context=".UI.CountryView">

    <TextView
        android:id="@+id/tv_cs_noHiflag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="18dp"></TextView>

    <ImageView
        android:id="@+id/iv_cs_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop"></ImageView>


    <ScrollView
        android:id="@+id/sv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cs_image"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorText"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_native_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_nativename"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_nativename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_native_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_region"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_callingCodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_region"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_callingcodes"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_callingcodes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_alphacodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_callingCodes"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_alphacodes"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_alpah2code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/country_coma"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_alpah3code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_alphacodes"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_language"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_capital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_languages"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_capital"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_population"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_capital"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_population"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_population"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_population"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_area"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/country_area_km"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_timezone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_area"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_timezones"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_timezones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_borders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_timezone"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_borders"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_borders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_currencies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_borders"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/country_currencies"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    <TextView
                        android:id="@+id/tv_cs_currencies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/CountryViewTextStyle"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_currencies_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_currencies"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/currency_name"
                            android:textAlignment="center"
                            android:textAppearance="@style/CountryViewTextStyle"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/currency_code"
                            android:textAlignment="center"
                            android:textAppearance="@style/CountryViewTextStyle"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/currency_symbol"
                            android:textAlignment="center"
                            android:textAppearance="@style/CountryViewTextStyle"></TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sv_info"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorExchangeBackground"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:weightSum="4.5">

                <Spinner
                    android:id="@+id/sp_cs_base_exchange"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:textAlignment="center"
                    android:textAppearance="@style/CountryViewTextStyle"></Spinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.4"
                    android:src="@drawable/ic_trending_flat"
                    android:textAppearance="@style/CountryViewTextStyle"></ImageView>

                <Spinner
                    android:id="@+id/sp_cs_country_exchange"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.9"
                    android:textAlignment="center"
                    android:textAppearance="@style/CountryViewTextStyle"></Spinner>

                <TextView
                    android:id="@+id/tv_cs_currency_exchange_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2.2"
                    android:text="@string/country_currencies"
                    android:textSize="14dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <Button
                android:id="@+id/bt_cs_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/colorMapButtonBackground"
                android:orientation="horizontal"
                android:text="@string/country_map_button"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>